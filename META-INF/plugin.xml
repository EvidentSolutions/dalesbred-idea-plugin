<idea-plugin version="2" url="https://bitbucket.org/evidentsolutions/dalesbred-idea-plugin">
    <id>fi.evident.dalesbred.plugin.idea</id>
    <name>Dalesbred</name>
    <version>0.1.1</version>
    <vendor email="juha.komulainen@evident.fi" url="http://www.evident.fi">Evident Solutions</vendor>

    <description><![CDATA[
      <a href="https://bitbucket.org/evidentsolutions/dalesbred">Dalesbred</a> support.
      ]]></description>

    <change-notes><![CDATA[
      Support verifying calls to update-methods.
      ]]>
    </change-notes>

    <idea-version since-build="123.72"/>

    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection displayName="Uninstantiable result class"
                         language="JAVA"
                         groupName="Dalesbred"
                         enabledByDefault="true"
                         implementationClass="fi.evident.dalesbred.plugin.idea.inspections.DalesbredUninstantiableResultInspection"/>
        <localInspection displayName="Invalid amount of parameters"
                         language="JAVA"
                         groupName="Dalesbred"
                         enabledByDefault="true"
                         implementationClass="fi.evident.dalesbred.plugin.idea.inspections.DalesbredIncorrectParameterCountInspection"/>
    </extensions>
</idea-plugin>
